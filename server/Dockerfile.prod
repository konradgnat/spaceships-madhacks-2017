FROM		node:boron

# Create app directory
RUN		    mkdir -p /usr/src/app
WORKDIR		/usr/src/app

# Install app dependencies
COPY		package.json /usr/src/app
RUN		    npm install

# Install dev depenencies
RUN		    npm install -g gulp gulp-babel gulp-watch

# Bundle app source
COPY		. /usr/src/app
RUN		    gulp build

# Configure network
EXPOSE		3000

# Start app
CMD		["npm", "start"]